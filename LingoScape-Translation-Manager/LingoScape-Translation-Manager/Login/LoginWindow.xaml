<Window x:Class="LingoScape_Translation_Manager.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LingoScape_Translation_Manager.Login"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    
    <Grid Margin="20">
        <!-- App Branding -->
        <TextBlock Text="LingoScape Translation Manager" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>

        <!-- Login Button -->
        <Button Name="GitHubLoginButton" Content="Sign in with GitHub" 
                Width="200" Height="40" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Click="GitHubLoginButton_Click"/>

        <!-- Status Text -->
        <TextBlock Name="StatusMessage" 
                   Text="" 
                   Foreground="Red" FontSize="12" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10,0,0"/>
    </Grid>
</Window>
